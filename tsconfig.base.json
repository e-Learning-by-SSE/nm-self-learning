			"@self-learning/api-client": ["libs/data-access/api-client/src/index.ts"],
			"@self-learning/cms-api": ["libs/data-access/cms-api/src/index.ts"],
			"@self-learning/completion": ["libs/feature/completion/src/index.ts"],
			"@self-learning/database": ["libs/data-access/database/src/index.ts"],
			"@self-learning/enrollment": ["libs/feature/enrollment/src/index.ts"],
			"@self-learning/lesson": ["libs/feature/lesson/src/index.ts"],
			"@self-learning/lia-exporter": ["libs/util/lia-exporter/src/index.ts"],
			"@self-learning/markdown": ["libs/util/markdown/src/index.ts"],
